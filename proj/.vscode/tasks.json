{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build with warnings",
        "type": "shell",
        "command": "gcc",
        "args": [
          "-Wall",
          "-Wextra",
          "-o",
          "myprogram",
          "myprogram.c"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": "$gcc"
      }
    ]
  }
  